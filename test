input_file = 'filtered_output.txt'  # Replace with your filtered output file name
output_file = 'cleaned_output.txt'  # Output file name for cleaned lines

try:
    with open(input_file, 'r') as file:
        lines = file.readlines()
except IOError:
    print("Error: Filtered output file does not appear to exist.")
    exit(1)

# Remove the '- name:' prefix from each line
cleaned_lines = [line.replace('- name:', '').strip() + '\n' for line in lines]

# Print the number of cleaned lines
print("Number of lines cleaned: {}".format(len(cleaned_lines)))

try:
    with open(output_file, 'w') as file:
        file.writelines(cleaned_lines)
    print("Cleaned lines have been saved to {}".format(output_file))
except IOError:
    print("Error: Could not write to output file.")