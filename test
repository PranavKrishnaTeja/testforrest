package com.schwab.cdt.spos.source.config;

import org.springframework.boot.test.context.TestConfiguration;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Primary;

@TestConfiguration
public class TestConfig {

    @Bean
    @Primary
    public SposConfig sposConfig() {
        return new SposConfig("uddi:schwab.com:service:sch.core.enterpriseStorage.SPOSStorageService", "SPOS", "SposS3Port", "brokerage-spr-batch-util-nonprod", "awsAccessKey", "awsSecretKey");
    }

    @Bean
    @Primary
    public CassandraConfig cassandraConfig() {
        return new CassandraConfig("titan_dev", "10.88.16.72", 9042, "username", "password",
                "QUORUM", "QUORUM", "DC1", 1000L, "trustStorePassword", "TLS", 10000, 100);
    }

    @Bean
    @Primary
    public LoggingConfig loggingConfig() {
        return new LoggingConfig("1.0.0", "AD00007442", "cdt-stream-spos-source", "3.1.0", false, "INFO",
                "uddi:schwab.com:service:sch.core.enterpriseStorage.SPOSStorageService", "SposS3Port", "schwab", "Client Data Management");
    }
}